<% layout('/layouts/boilerplate') %>

    <body>
        <h3 class="m-4"><a href="/listings"><i class="fa-solid fa-circle-arrow-left fa-lg mr-2" style="color: #000000;"></i></a><b>FARMHOUSES</b> : </h3>

        <div class="containerx">
            <% if(allListings.length==0){%>
                <h1>No listings available</h1>
                <%}%>
                    <% for(list of allListings){ %>

                        <a href="/listings/<%= list._id %>">
                            <div class="listing">
                                <img src="<%= list.image.url || list.image %>" alt="image of <%= list.title %>"
                                    loading="lazy">
                                <div class="listInfo">
                                    <p>
                                        <b>
                                            <%= list.title %>
                                        </b>
                                    </p>
                                    <!-- <p> <b>Description :</b> <%=  list.description  %></p> -->
                                    <p>
                                        <%= list.price.toLocaleString("en-US") %> PKR/night
                                    </p>
                                    <p>
                                        <%= list.location %> ,
                                            <%= list.country %>
                                                <% if(!list.booked || list.booked=="false" ){%>
                                                    <p> <b>Available for booking</b></p>
                                                    <% } else{%>
                                                        <p><b>Booked</b></p>
                                                        <% }%>
                                    </p>


                                </div>
                                <!-- <p> <b>Image Link :</b> <a href="<%= list.image.url  %>" target = "_blank">click to see images</a> </p> -->
                            </div>

                        </a>

                        <%}%>

        </div>
    </body>