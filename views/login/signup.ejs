<% layout('/layouts/boilerplate') %>

    <body>
        <div class="centerDiv">
            <h3 class="mt-2 topHeading">Get Registered : </h3>
            <div class="formContainer">
                <form action="/signup" method="post" class="needs-validation mb-5" novalidate>
                    <div>
                        <label for="username" class="form-label "> Username :</label>
                        <input class="form-control" type="text" name="username" id="username"
                            placeholder=" Username" required>
                        <div class="valid-feedback">Username is Valid!</div>
                        <div class="invalid-feedback">Please enter a Username.</div>
                    </div>
                    <br>
                    <div>
                        <label for="email" class="form-label "> Email Address :</label>
                        <input class="form-control " type="email" name="email" id="email" placeholder=" Email address"
                            required>
                        <div class="invalid-feedback">Please enter a valid email.</div>
                    </div>
                    <br>
                    <div>
                        <label for="password" class="form-label"> Password :</label>
                        <div id="inline">
                            <input class="form-control" type="password" name="password" id="pwd" placeholder=" Password"
                                required>
                            <i class="fa fa-eye" id="eyeIcon"></i>
                        </div>

                        <div class="invalid-feedback">Please enter password.</div>
                    </div>
                    <br>
                    <i>Already have an account, <a href="/login">Login Now!</a> </i>
                    <br>
                    <br>
                    <div class="divBtns"> <button class="fullWidth">Sign Up</button></div>
                </form>
            </div>
        </div>
    </body>